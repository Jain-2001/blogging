<%- include('header'); -%>
    <!-- Header -->
    <header class="border-bottom">
      <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand fs-4" href="#">Blogging Platform</a>
          <button class="navbar-toggler btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
            <ul class="nav navbar-nav">
              <li class="nav-item"><a href="/home/<%=id%>" class="nav-link" aria-current="page">Blog</a></li>
              <li class="nav-item"><a href="/blog/<%=id%>" class="nav-link">Your Blog</a></li>
              <li class="nav-item"><a href="/create/<%=id%>" class="nav-link">Create</a></li>
              <li class="nav-item"><a href="/dashboard/<%=id%>" class="nav-link">Dashboard</a></li>
              <li class="nav-item"><a href="/account/<%=id%>" class="nav-link">My Account</a></li>
              <li class="nav-item"><form class="d-flex" action="/id/search/<%=id%>" method="post" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" name="search_value" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
<!-- Main  Section -->
<div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
          <img src="<%=udata.image%>" height="240px" width="240px" style="border-radius: 100px;" alt="">
            <h2 class="fw-normal text-center"><%=udata.fname%> <%=udata.lname%></h2> 
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#" onclick="calling('dashboard')">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home" aria-hidden="true"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" onclick="calling('product')">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart" aria-hidden="true"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
                Products
              </a>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link" href="#" onclick="calling('sublist')">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users" aria-hidden="true"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                Subscribers
              </a>
            </li> -->
          </ul>
  
          
        </div>
      </nav>
  
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
        </div>
        <div id="dashboard">
          <p class="fs-2">Details</p>
          <div class="row text-center mt-4">
            <div class="col p-2">
             <h1 class="mb-1 line-height-5"><%= blen %></h1>
              <h2 class="mb-0 font-weight-bold">Blogs</h2>
             </div>
              <div class="col p-2">
                <h1 class="mb-1 line-height-5"><%=plen%></h1>
                <h2 class="mb-0 font-weight-bold">Products</h2>
               </div>
              <div class="col p-2">
               <h1 class="mb-1 line-height-5"><%=view%></h1>
               <h2 class="mb-0 font-weight-bold">Views</h2>
              </div>
           </div>
        </div>
  
  
        <!-- Product section -->
        <div id="product" style="display:none;">
          <p class="fs-2">Your Products</p>
          <div class="container">
            <div class="row">
             <% productdata.forEach(function(item){ %>
              <div class="col">
                <div class="card" style="width: 16rem;">
                    <img src="<%= item.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= item.name %></h5>
                      <p class="card-text"><%= item.price %></p>
                      <a href="<%= item.link %>" class="btn btn-primary">Buy</a>
                      <a href="/product/delete/<%=id%>/<%=item._id%>" class="btn btn-danger">Remove</a>
                    </div>
                  </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>      
      </main>
    </div>
  </div>
  



<%-include('footer'); -%>