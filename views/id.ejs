<%-include('header')-%>
    <!-- Header -->
    <header class="border-bottom">
      <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand fs-4" href="#">Blogging Platform</a>
          <button class="navbar-toggler btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
            <ul class="nav navbar-nav">
              <li class="nav-item"><a href="/home/<%=id%>" class="nav-link" aria-current="page">Blog</a></li>
              <li class="nav-item"><a href="/blog/<%=id%>" class="nav-link">Your Blog</a></li>
              <li class="nav-item"><a href="/create/<%=id%>" class="nav-link">Create</a></li>
              <li class="nav-item"><a href="/dashboard/<%=id%>" class="nav-link">Dashboard</a></li>
              <li class="nav-item"><a href="/account/<%=id%>" class="nav-link">My Account</a></li>
              <li class="nav-item"><form class="d-flex" action="/id/search/<%=id%>" method="post" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" name="search_value" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!-- Main Part -->
      <p class="h1 border-bottom">Content</p>
      
      <div class="border-bottom">
        <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark" style="background-image:url('<%= bdata.image %>');background-size:100% 100%;height: 500px;"></div>
        <h1><%= bdata.title %></h1>
        <p><%= bdata.content %></p>
      </div>
  
  
      
      <!-- Your Products -->
      <p class="fs-2">Products</p>
      <div class="container">
          <div class="row">
            <% pdata.forEach(function(item){ %>

           
            <div class="col">
              <div class="card" style="width: 16rem;">
                  <img src="<%= item.image %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%= item.name %></h5>
                    <p class="card-text">Price: $<%= item.price %></p>
                    <a href="<%= item.link %>" class="btn btn-primary">Buy</a>
                  </div>
                </div>
            </div>
         <% }) %>
          </div>
        </div>


<%-include('footer')-%>