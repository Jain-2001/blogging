<%-include('header'); -%>
     <!-- Header -->
     <header class="border-bottom">
      <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand fs-4" href="#">Blogging Platform</a>
          <button class="navbar-toggler btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
            <ul class="nav navbar-nav">
              <li class="nav-item"><a href="/home/<%=id%>" class="nav-link" aria-current="page">Blog</a></li>
              <li class="nav-item"><a href="/blog/<%=id%>" class="nav-link">Your Blog</a></li>
              <li class="nav-item"><a href="/create/<%=id%>" class="nav-link">Create</a></li>
              <li class="nav-item"><a href="/dashboard/<%=id%>" class="nav-link">Dashboard</a></li>
              <li class="nav-item"><a href="/account/<%=id%>" class="nav-link">My Account</a></li>
              <li class="nav-item"><form class="d-flex" action="/id/search/<%=id%>" method="post" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" name="search_value" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
<!-- Create Tab -->
    <div class="container" style="margin:30px auto;">
        <div class="row">
          <div class="col">
            <a href="/products/<%=id%>" style="text-decoration: none; color: inherit;" ><button type="button" style="width: 200px; margin-right: 80%;" class="btn btn-outline-primary btn-lg">Add Products</button></a>
          </div>
          <div class="col">
            <a href="/editor/<%=id%>" style="text-decoration: none; color: inherit;"><button type="button" style="margin-left: 80%; width: 200px;" class="btn btn-outline-success btn-lg">Create</button></a>
          </div>
        </div>
    </div>
    <!-- Blog part -->
    <% data.forEach(function(item){ %>
    <div class="card mb-3" style="max-width: 1200px; margin:20px auto;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/<%= item.image %>" class="img-fluid rounded-start" >
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <p class="card-text cutoff-line"><%= item.content %></p>
              <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
              <a href="/editor/edit/<%=id%>/<%=item._id%>" style="width: 80px;" class="btn btn-primary">Edit</a>
              <a href="/editor/delete/<%=id%>/<%=item._id%>" style="width: 90px;" class="btn btn-danger">Remove</a>
              <!-- <a href="#" style="width: 90px; margin-left: 480px;" class="btn btn-success">Post</a> -->
            </div>
          </div>
          
        </div>
      </div>
      <%})%>
     

<%- include('footer'); -%>