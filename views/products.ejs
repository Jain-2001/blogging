<!-- Main Part -->

<form action="/products/<%=id%>" method="post" enctype="multipart/form-data">
    <div style="margin: 5% 8%; ">
        <h1 style="margin-left: 35%;">Create your Product</h1>
        <h2>Product Name</h2>
        <div class="mb-3">
            <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="Enter the Product title here">
        </div>
        <h2>Image</h2>
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupFile01">Upload Image</label>
            <input type="file" name="image" class="form-control" id="inputGroupFile01">
        </div>
        <h2>Product Link</h2>
        <div class="mb-3">
            <input type="text" name="link" class="form-control" id="exampleFormControlInput1" placeholder="Enter the Product link here">
        </div>
        <h2>Product Price</h2>
        <div class="mb-3">
            <input type="text" name="price" class="form-control" id="exampleFormControlInput1" placeholder="Enter the Product price in $USD">
        </div>
        <input type="hidden" id="custId" name="custId" value="<%=id%>">
        <div style="margin-left: 78%;">
            <button type="reset" class="btn btn-secondary" style="width: 120px;">Cancel</button>
            <button type="submit" class="btn btn-primary" style="width: 120px;">Save</button>
        </div>
    </div>
</form>





