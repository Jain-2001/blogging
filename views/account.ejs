<%-include('header') -%>
    <!-- Header -->
    <header class="border-bottom">
      <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand fs-4" href="#">Blogging Platform</a>
          <button class="navbar-toggler btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
            <ul class="nav navbar-nav">
              <li class="nav-item"><a href="/home/<%=id%>" class="nav-link" aria-current="page">Blog</a></li>
              <li class="nav-item"><a href="/blog/<%=id%>" class="nav-link">Your Blog</a></li>
              <li class="nav-item"><a href="/create/<%=id%>" class="nav-link">Create</a></li>
              <li class="nav-item"><a href="/dashboard/<%=id%>" class="nav-link">Dashboard</a></li>
              <li class="nav-item"><a href="/account/<%=id%>" class="nav-link">My Account</a></li>
              <li class="nav-item"><form class="d-flex" action="/id/search/<%=id%>" method="post" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" name="search_value" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!-- Main Section -->
    <div class="container">
      <div class="row">
              <div class="col-lg-4">
                 <div class="profile-card-4 z-depth-3">
                  <div class="card">
                    <div class="card-body text-center rounded-top">
                     <div class="user-box">
                     <% if(udata.image===' '){ %>
                      <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="card-img-top" alt="user avatar">
                     <% } else { %>
                      <img src="<%= udata.image %>" class="card-img-top" style="height: 400px;width: 350px;" alt="user avatar">
                     <% } %>
                      
                    </div>
                   </div>
                    <div class="card-body">
                      <ul class="list-group shadow-none">
                      <li class="list-group-item">
                        <div class="list-icon">
                          <i class="fa fa-envelope"></i>
                        </div>
                        <div class="list-details">
                          <small>Email Address:</small>
                          <span><%=udata.email%></span>
                          
                        </div>
                      </li>
                      </ul>
                      <div class="row text-center mt-4">
                        <div class="col p-2">
                         <h4 class="mb-1 line-height-5"><%= blen %></h4>
                          <small class="mb-0 font-weight-bold">Blogs</small>
                         </div>
                          <div class="col p-2">
                            <h4 class="mb-1 line-height-5"><%= plen %></h4>
                           <small class="mb-0 font-weight-bold">Products</small>
                          </div>
                          <div class="col p-2">
                           <h4 class="mb-1 line-height-5"><%= view %></h4>
                           <small class="mb-0 font-weight-bold">Views</small>
                          </div>
                       </div>
                     </div>
                   </div>
                 </div>
              </div>
              <div class="col-lg-8">
                 <div class="card z-depth-3">
                  <div class="card-body">
                  <ul class="nav nav-pills nav-pills-primary nav-justified" style="margin-bottom: 16px;">
                      <li class="nav-item">
                          <a href="#" id="profile" onclick="toggleDiv('profileSection');" data-toggle="pill" class="nav-link active show"><i class="icon-user"></i> <span class="hidden-xs">Profile</span></a>
                      </li>
                      <li class="nav-item">
                        <a href="#" id="edit" onclick="toggleDiv('editSection');" data-toggle="pill" class="nav-link show"><i class="icon-user"></i> <span class="hidden-xs">Edit</span></a>
                    </li>
                  </ul>
        
                      <div class="tab-pane active" id="profileSection" style="display: block;">
                          <h5 class="mb-3"><%=udata.fname%> <%=udata.lname%></h5>
                          <div class="row">
                              <div class="col-md-6">
                                  <h6>Profession</h6>
                                  <p>
                                      <%=udata.profession%>
                                  </p>
                                  <h6>Website</h6>
                                  <p>
                                     <%=udata.website%>
                                  </p>
                                  <h6>Email</h6>
                                  <p>
                                     <%=udata.email%>
                                  </p>
                                  <a href="/register"><button type="button" class="btn btn-outline-danger">Log out</button></a>
                              </div>
                          </div>
                      </div>

                      <div class="tab-pane" id="editSection" style="display: none;">
                          <form action="/account/<%=id%>" method="post" enctype="multipart/form-data">
                              <div class="form-group row">
                                  <label class="col-lg-3 col-form-label form-control-label">First name</label>
                                  <div class="col-lg-9">
                                      <input class="form-control" type="text" name="fname">
                                  </div>
                              </div>
                              <div class="form-group row">
                                  <label class="col-lg-3 col-form-label form-control-label">Last name</label>
                                  <div class="col-lg-9">
                                      <input class="form-control" type="text" name="lname">
                                  </div>
                              </div>
                              <div class="form-group row">
                                  <label class="col-lg-3 col-form-label form-control-label">Email</label>
                                  <div class="col-lg-9">
                                      <input class="form-control" type="email" name="mail">
                                  </div>
                              </div>
                              <div class="form-group row">
                                  <label class="col-lg-3 col-form-label form-control-label">Profession</label>
                                  <div class="col-lg-9">
                                      <input class="form-control" type="text" name="profession">
                                  </div>
                              </div>
                              <div class="form-group row">
                                  <label class="col-lg-3 col-form-label form-control-label">Website</label>
                                  <div class="col-lg-9">
                                      <input class="form-control" type="url" name="website">
                                  </div>
                              </div>   
                              <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Upload Image</label>
                                  <div class="col-lg-9">
                                    <input type="file" name="image" class="form-control" id="inputGroupFile01">
                                  </div>  
                            </div>
                              <div class="form-group row" style="margin-top: 10px;">
                                  <label class="col-lg-3 col-form-label form-control-label"></label>
                                  <div class="col-lg-9">
                                      <input type="reset" class="btn btn-secondary" value="Cancel">
                                      <input type="submit" class="btn btn-primary" value="Save Changes">
                                  </div>
                              </div>
                          </form>
                      </div>
              </div>
            </div>
          </div>
           
              
          </div>
      </div>

      
<%-include('footer') -%>  